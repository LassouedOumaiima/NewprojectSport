@ExtendWith(MockitoExtension.class)
class CipherAESGCMServiceImplTest {

    @InjectMocks
    private CipherAESGCMServiceImpl cipherService;

    @Mock
    private Logger logger;

    @BeforeEach
    void setUp() {
        ReflectionTestUtils.setField(cipherService, "secretkey", "12345678901234567890123456789012"); // 32-byte key
    }

    @Test
    void testEncryptAndDecrypt() throws Exception {
        String plainText = "Hello, World!";
        String encrypted = cipherService.encrypt(plainText);
        String decrypted = cipherService.decrypt(encrypted);
        assertEquals(plainText, decrypted);
    }
}
