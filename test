@Test
	void testGetPrediction() throws Exception {
		String mail = "Bonjour, Prise de rdv, je souhaite un rdv pour le 26/01 pour le changement de plafond de ma CB" ;
		MailRequest mailRequest = new MailRequest("123", mail );
		MockHttpServletResponse response = mockMvc.perform(MockMvcRequestBuilders.post("/getPrediction")
									    		  .contentType(MediaType.APPLICATION_JSON)
									    		  .content(String.valueOf(mailRequest)))
									    		  .andReturn().getResponse();
		if(response.getStatus() == HttpStatus.OK.value()){
			Category cat1 = new Category("CARTE-BANCAIRE_CHANGEMENT-PLAFOND", 0.8711363077163696) ;
			Category cat2 = new Category("RDV_CONFIRMATION-CALAGE", 0.7130698561668396) ;
			Category cat3 = new Category("RDV_PRISE-DE-RDV", 0.6180949807167053) ;
			List<Category> categoryTests = new ArrayList<>();
			categoryTests.add(cat1);
			categoryTests.add(cat2);
			categoryTests.add(cat3);
			Prediction predictionTest = new Prediction(categoryTests);
			Prediction prediction  = objectMapper.readValue(response.getContentAsString(), Prediction.class);
			assertThat(prediction.equals(predictionTest));
		}
	}
