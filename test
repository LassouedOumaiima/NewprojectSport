package fr.ca.cats.p1354.s3601.svcllm.service.impl;

import static org.mockito.Mockito.*;
import static org.junit.jupiter.api.Assertions.*;

import fr.ca.cats.p1354.s3601.svcllm.model.*;
import fr.ca.cats.p1354.s3601.svcllm.service.*;
import fr.ca.cats.p1354.s3601.svcllm.utils.KafkaPropertiesLoader;
import org.apache.kafka.clients.consumer.ConsumerRecords;
import org.apache.kafka.clients.consumer.KafkaConsumer;
import org.apache.kafka.clients.consumer.ConsumerRecord;
import org.junit.jupiter.api.BeforeEach;
import org.junit.jupiter.api.Test;
import org.mockito.InjectMocks;
import org.mockito.Mock;
import org.mockito.MockitoAnnotations;
import org.springframework.http.ResponseEntity;

import java.time.Duration;
import java.util.Properties;

class ConsumerKafkaServiceImplTest {

    @Mock
    private ProducerKafkaService producerKafkaService;

    @Mock
    private LLMAccessService llmAccessService;

    @Mock
    private SvcllmService svcllmService;

    @Mock
    private AESUtilService aESUtilService;

    @Mock
    private KafkaConsumer<DemandeSuggestionKey, DemandeSuggestionValue> kafkaConsumer;

    @Mock
    private ConsumerRecords<DemandeSuggestionKey, DemandeSuggestionValue> consumerRecords;

    @Mock
    private ConsumerRecord<DemandeSuggestionKey, DemandeSuggestionValue> consumerRecord;

    @InjectMocks
    private ConsumerKafkaServiceImpl service;

    private Properties mockedProperties;

    @BeforeEach
    void setUp() {
        MockitoAnnotations.openMocks(this);
        mockedProperties = new Properties();
        mockedProperties.setProperty("value.deserializer", "org.apache.kafka.common.serialization.StringDeserializer");
        mockedProperties.setProperty("key.deserializer", "org.apache.kafka.common.serialization.StringDeserializer");
        mockedProperties.setProperty("bootstrap.servers", "localhost:9092");
        mockedProperties.setProperty("group.id", "test-group");
        mockedProperties.setProperty("schema.registry.url", "http://localhost:8081");
        mockedProperties.setProperty("schema.registry.basic.auth.user.info", "user:password");

        when(KafkaPropertiesLoader.loadKafkaProperties(anyString())).thenReturn(mockedProperties);
    }

    @Test
    void testInit() {
        service.init();

        assertNotNull(service.getKafkaConsumer());
    }

    @Test
    void testScheduleStopLocal() {
        service.scheduleStopLocal();
        assertFalse(service.getIsActiveLocal());
    }

    @Test
    void testSetIsActiveLocal() {
        service.setIsActiveLocal(true);
        assertTrue(service.getIsActiveLocal());

        service.setIsActiveLocal(false);
        assertFalse(service.getIsActiveLocal());
    }

    @Test
    void testStartKafkaWhenActive() {
        when(service.getKafkaConsumer()).thenReturn(kafkaConsumer);
        when(kafkaConsumer.poll(Duration.ofMillis(1000))).thenReturn(consumerRecords);

        service.setIsActiveLocal(true);
        service.startKafka(service);

        verify(kafkaConsumer, atLeastOnce()).poll(any(Duration.class));
    }

    @Test
    void testStartKafkaHandlesException() {
        when(service.getKafkaConsumer()).thenReturn(kafkaConsumer);
        when(kafkaConsumer.poll(any(Duration.class))).thenThrow(new RuntimeException("Polling error"));

        service.setIsActiveLocal(true);

        assertDoesNotThrow(() -> service.startKafka(service));
    }

    @Test
    void testStartKafkaCoreHandlesLLMError() {
        DemandeSuggestionValue suggestionValue = mock(DemandeSuggestionValue.class);
        when(suggestionValue.getMailId()).thenReturn("12345");

        when(consumerRecords.iterator()).thenReturn(Collections.singletonList(consumerRecord).iterator());
        when(consumerRecord.value()).thenReturn(suggestionValue);

        service.startKafkaCore(service);

        verify(llmAccessService, times(1)).send(any(ChatRequest.class), anyString());
        verify(aESUtilService, never()).encrypt(anyString());
    }

    @Test
    void testStartSuccess() {
        doNothing().when(service).scheduleStart(service);

        ResponseEntity<String> response = service.start(service);

        assertEquals(200, response.getStatusCodeValue());
        assertTrue(response.getBody().contains("ok"));
    }

    @Test
    void testStartFailure() {
        doThrow(new RuntimeException("Start error")).when(service).scheduleStart(service);

        ResponseEntity<String> response = service.start(service);

        assertEquals(500, response.getStatusCodeValue());
        assertTrue(response.getBody().contains("KO"));
    }

    @Test
    void testScheduleStartHandlesException() {
        doThrow(new RuntimeException("Schedule start error")).when(service).init();

        assertDoesNotThrow(() -> service.scheduleStart(service));
        assertFalse(service.getIsActiveLocal());
    }
}
